
<div class="row">
      <div class="col mt-7 text-light">
        <div class="mx-auto pt-5" style="width: 700px" style="margin-top: 50px;">
          <%= link_to admin_member_path(@member) do %>
            <h3><%= @post.member.nickname %></h3><br>
          <% end %>
          <div class="mb-3">
            <%= link_to "編集する", edit_admin_post_path, class: "btn btn-outline-success btn-sm" %>
            <%= link_to "削除", admin_post_path(@post.id), method: :delete,class: "btn btn-outline-success btn-sm", "data-confirm" => "本当に削除しますか？" %><br>
        </div>
          <%= image_tag @post.image, size: "700x400" %><br>
          <%= @post.name %><br>

          ♥<%= @post.favorites.count %>いいね
         <p>
          <%= link_to admin_post_comment_path(@post)do %>
          コメント件数：<%= @post.post_comments.count %>
          <% end %>
         </p>
         <p><%=@post.address %></p>
        </div>
      </div>
    </div>
