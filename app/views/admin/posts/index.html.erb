<div class="container px-5 py-4">
  <div class="row align-items-center justify-content-between">
    <h4 class="col-3">投稿一覧</h4>
  </div>

  <table class="table table-hover table-inverse cart_products">
    <tr>
      <th class="table-secondary">投稿ID</th>
      <th class="table-secondary">画像</th>
      <th class="table-secondary">氏名</th>
      <th class="table-secondary">お気に入りのお店</th>
      <th class="table-secondary">説明</th>

    </tr>
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.id %></td>
      <td><%= post.member.name %></td>
      <td>
          <%= post.member.nickname %>
      </td>
      <td><%= post.member.email %></td>
      <% if member.member_status == "true" %>
        <td>有効</td>
      <% else member.member_status == "false" %>
        <td>退会</td>
      <% end %>
    </tr>
    <% end %>
  </table>

</div>