<div class="contents_2p text-light">
  <div class="container-fluid">
    <div class="row">
      <div class="col mt-7 text-light">
        <div class="mx-auto pt-5" style="width: 600px" style="margin-top: 50px;">
          <h3>編集する</h3>
  <%= form_with model: @post, url: post_path do |f| %>
<div class="form-group">
    <%= f.text_field :shop_name, placeholder:"お店の名前",size:"60*60" %>
    </div>
    <div class="form-group">
    <%= f.text_area :explanation,placeholder:"コメント",size:"60*60" %>
    </div>
    <div class="form-group">
    <%= f.file_field :image, accept: "image/*" %>
    </div>
    <div class="form-group">
      <%= f.text_field :address, placeholder: "住所",size:"60*60" %>
    </div>
    <%= f.submit '投稿' %>
  <% end %>
</div>
 </div>
    </div>
  </div>
</div>