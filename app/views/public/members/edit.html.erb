<div class="container">
  <div class="row mb-3">
    <h3>会員情報編集</h3>
  </div>

  <%= form_with model: @member, url: customer_update_path, local:true do |f| %>
    <div class="form-group row">
      <%= f.label :"氏名", class: "col-md-3" %>
      <%= f.text_field :name, class: "col-md-2 form-control" %>
    </div>
    <div class="form-group row">
      <%= f.label :"ニックネーム", class: "col-md-3" %>
      <%= f.text_field :nickname, class: "col-md-2 form-control" %>
    </div>
    <div class="form-group row">
      <%= f.label :"メールアドレス", class: "col-md-3" %>
      <%= f.text_field :email, class: "col-md-5 form-control" %>
    </div>
    <div class="form-group row d-flex">
      <%= f.submit "編集内容を保存", class: "btn btn-outline-primary btn-sm" %>
    </div>
  <% end %>
</div>
