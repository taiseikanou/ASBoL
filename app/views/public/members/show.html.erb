<div  class="container">

  <div class="row">
    <div class="col-md-5">
      <h3><span>マイページ</span></h3>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8">

      <div class="row mt-1 ml-1">
        <h5>登録情報</h5>
        <span class="ml-3"><%= link_to "編集する", edit_members_path, class: "btn btn-outline-success btn-sm" %></span>
      </div>

      <div class="table-responsive-md mt-3">
        <table class="table">
          <tr>
            <td class="bg-light" style="width:25%">氏名</td>
            <td style="width:75%"><%= current_member.name %> </td>
          </tr>
          <tr>
            <td class="bg-light">ニックネーム</td>
            <td><%= current_member.nickname %> </td>
          </tr>
          <tr>
            <td class="bg-light">メールアドレス</td>
            <td><%= current_member.email %></td>
          </tr>
        </table>
      </div>

      <div class="row">
        <div class="col-md-3 d-flex flex-column">
          <h5 class="font-weight-bold my-3 d-inline-flex">配送先</h5>
          <h5 class="font-weight-bold my-3 d-inline-flex">注文履歴</h5>
        </div>
      </div>

    </div>
  </div>
</div>
