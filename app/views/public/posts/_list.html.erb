<div class="row ml-5">
    <% posts.each do |posts| %>
      <div class="col-md-5-mx-5">
        <div class="card-body text-center text-light ">
          <%= link_to post_path(posts.id) do %>
            <%= image_tag posts.image, size: "230x230" %><br>
          <% end %>
          <% if posts.asbol=="店飲み" %>
          <%= posts.asbol %><br>
          <%= posts.name %><br>
          <%= posts.address %><br>
        <% elsif posts.asbol=="家飲み" %>
        　<%= posts.asbol %><br>
          <%= posts.name %><br>
        <% end %>
        </div>
      </div>
    <%end%>
  </div>
</div>
