<div class="row">
  <% @posts.each do |posts| %>
    <div class="col-md-3-mx-4 mx-auto">
      <p class="card-body text-center text-light mx-auto">
        <%= link_to post_path(posts.id) do %>
          <%= image_tag posts.image, size: "230x230" %><br>
        <% end %>
        <%= posts.shop_name %><br>
        <%= posts.address %><br>
      </p>
    </div>
  <%end%>
</div>
