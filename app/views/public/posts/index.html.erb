<div class="row">
    <% @posts.each do |posts| %>
      <div class="col-md-3-mx-2">
        <p class="card-body text-center text-light">
          <%= link_to post_path(posts.id) do %>
            <%= image_tag posts.image, size: "230x230" %><br>
          <% end %>
          <% if posts.asbol=="shop_name" %>
          <%= posts.shop_name %><br>
          <%= posts.address %><br>
          <% elsif posts.asbol=="alcohol" %>
          <%= posts.comment %><br>
          <% end %>
        </p>
      </div>
    <%end%>
  </div>
</div>
