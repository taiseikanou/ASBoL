<div class="container">
  <div class="row">
    <div class="col">
      <h3>投稿一覧</h3>
      <table class="table table-bordered">
        <tr>
          <th class="table-active">お気に入りのお店</th></th>
          <th class="table-active">ニックネーム</th>
          <th class="table-active">説明</th>
          <th class="table-active">画像</th>

        </tr>
        <% @posts.each do |posts| %>
            <tr>
              <td><%= link_to post_path(posts.id) do %>
                  <span><%= posts.shop_name %></span>
                  <% end %>
              </td>
              <td>
              <%= posts.member.nickname %>
              </td>
              <td>
               <%= posts.explanation %>
              </td>
              <td>
                <% if posts.image.attached? %>
                    <%= image_tag posts.image, size: "200x200" %>
                  <% else %>
                    <%= image_tag 'no_image', size: "200x200" %>
                  <% end %>
              </td>
            </tr>
          <% end %>
      </table>
    </div>
  </div>
</div>